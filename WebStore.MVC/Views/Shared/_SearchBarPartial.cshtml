<form asp-controller="Products" asp-action="Index" class="form-inline my-2 my-lg-0" method="get">
    <input id="searchString" name="searchString" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
    <button type="submit" class="btn btn-light">Search</button>
</form>


<script>
    $(".searchString").change(function () {
        $(this).closest('form').submit();
    });

    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/Products/GetAllProductNames",
            contentType: "application/json; charset=utf-8",
            success: function (response) {
                $("#searchString").keyup(function (e) {
                    $("#searchString").autocomplete({
                        source: response
                    });
                });
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    });

</script>