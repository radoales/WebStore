@model UserDetailRequestModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Info about user</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="edit">
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-9 mb-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-2">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div>
                <hr />
                <h4>Address</h4>
            </div>
            <div class="form-row">
                <div class="col-md-9 mb-3">
                    <label asp-for="Address.Town" class="control-label"></label>
                    <input type="text" asp-for="Address.Town" class="form-control" />
                    <span asp-validation-for="Address.Town" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <div>
                        <label asp-for="Address.Zip" class="control-label"></label>
                        <input type="text" asp-for="Address.Zip" class="form-control" />
                        <span asp-validation-for="Address.Zip" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div>
                <label asp-for="Address.AddressField" class="control-label"></label>
                <input type="text" asp-for="Address.AddressField" class="form-control" />
                <span asp-validation-for="Address.AddressField" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Confirm Changes" style="width:100%;" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
</div>
